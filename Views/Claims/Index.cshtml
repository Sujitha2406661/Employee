@model IEnumerable<EmployeeGroupHealthInsuranceManagementSystem.Models.Claim>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Enrollment.EnrollmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClaimId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClaimId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClaimId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
